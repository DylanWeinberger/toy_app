<h1>Organizations#show</h1>
<%= @org.username %>
<%= @org.email %>
<%= @org.address %>

<% if @org.seeks.count == 0 %>
<h4>Start adding toys your a looking for!</h4>
<% else %>
  <h3>These are the toys that we are looking for!</h3>
  <% @org.seeks.each do |t| %>
    <% if t.sent == false %>
      <%= t.toy.name %>
      <%= image_tag t.toy.image.url(:thumb) %>
        <%= form_for(@donandseek) do |f| %>
          <% if logged_in_don? %>
          <h3> Do you have this toy? Want to Donate?</h3>
            <%= f.hidden_field(:donator_id, :value => current_don.id) %>
            <%= f.hidden_field(:seek_id, :value => t.id)%>
            <%= f.hidden_field(:organization_id, :value => @org.id)%>
            <%= f.hidden_field(:active, :value => true) %>
          <div>
            <%= f.submit "start a connection!", :class => "RSVP_button" %>
          </div>
          <% end %>
        <% end %>
      <% end %>  
  <% end %>
<% end %>
<!-- Conversation Section -->
    <h1>Active conversations</h1>
    <% if @org.org_and_toy_connects.count != 0  %>
  
    <% @org.org_and_toy_connects.each do |t| %>
      <% if t.active == true %>
        <%= link_to t.donors_toy.toy.name, t, :class => "link_to_buttons" %>
       <% end %> 
    <% end %>
  <% end %>
  <% if @org.don_and_seek_connects.count != 0 %>
    <% @org.don_and_seek_connects.each do |t| %>
      <% if t.active == true %>
        <%= link_to t.seek.toy.name, t, :class => "link_to_buttons" %>
      <% end %>
    <% end %>
  <% end %>
  <h1>Closed Conversations</h1>
  <% if @org.org_and_toy_connects.count != 0 %>
    
    <% @org.org_and_toy_connects.each do |t| %>
      <% if t.active == false %>
        <%= link_to t.donors_toy.toy.name, t, :class => "link_to_buttons" %>
       <% end %> 
    <% end %>
  <% end %>
  <% if @org.don_and_seek_connects.count != 0 %>
    <% @org.don_and_seek_connects.each do |t| %>
      <% if t.active == false %>
        <%= link_to t.seek.toy.name, t, :class => "link_to_buttons" %>
      <% end %>
    <% end %>
  <% end %>

  <!-- Received Toys Section -->
  <% if @org.received_toys.count == 0 %>
    <h4>We have not received any donations</h4>
  <% else %>
    <h4>These are the toys we have received!</h4>  
      <% @org.received_toys.each do |t| %>
      <% if t.donors_toy_id != nil %>
        <%= t.donors_toy.toy.name %>
        <%= image_tag t.donors_toy.toy.image.url(:thumb) %>
      <% end %>
      <% if t.seek_id != nil %>
        <%= t.seek.toy.name %>
        <%= image_tag t.seek.toy.image.url(:thumb) %>
      <% end %>
    <% end %>
  <% end %>    



